---
import { getPosts } from "@data/firebase";
import Layout from "@layouts/Layout.astro";

const posts = (await getPosts()) as FirePost[];
---

<Layout>
  <main id="FirestoreBlog" class="park-width">
    <section class="py-10">
      <h1 class="text-xl mb-2 font-bold">Firstore Posts</h1>

      <ul class="flex flex-col gap-3">
        {
          posts.map((post) => (
            <li>
              <a
                class="py-5 px-3 bg-gray-50/20 block"
                href={`/blog/firebase/${post.title
                  .toLowerCase()
                  .replaceAll(" ", "-")}`}
              >
                {post.title}
              </a>
            </li>
          ))
        }
      </ul>
    </section>
  </main>
</Layout>
